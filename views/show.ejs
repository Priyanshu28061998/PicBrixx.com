<% include partials/header.ejs %>

<div class="container">
    <div class="row">
        <div class="col-md-3">
            <p class="lead">YelpCamp</p>
            <div class="list-group">
                <li class="list-group-item active">Info 1</li>
                <li class="list-group-item">Info 2</li>
                <li class="list-group-item">Info 3</li>
            </div>
        </div>
        <div class="col-md-9">
            <div class="thumbnail">
                <img class="image-responsive" src="<%=campground.image%>">
                <div class="caption-full">
                     <h2 style="color:rgb(117, 155, 216)"><a><%= campground.name %></a></h2>
                    
                     <p><%= campground.description%></p>
                     <a class="btn btn-warning" href="/campgrounds/<%= campground._id %>/edit">Edit</a>
          <form id="delete-form" method="POST" action="/campgrounds/<%= campground._id %>?_method=DELETE">
            <button class="btn btn-danger">Delete</button>
          </form>
                </div>
            </div>
            <div class="well">
                <div class="text-right">
                    <p><a class="btn btn-success" href="/campgrounds/<%=campground._id%>/comments/newComment">Add New Comment</a></p>
                </div>
               <% campground.comments.forEach(function(comment){ %>
                      <div class="row">
                          <div class="col-md-12">
                              <strong><%=comment.author%></strong>
                              <p><%=comment.text%></p>
                              <span><p class="text-right"> <%=new Date().getHours()+'-'+(new Date().getMinutes()+1)+'-'+new Date().getSeconds() %>  </p></span>
                               <% }); %>
                          </div>
                      </div>
            </div>
        </div>
    </div>
</div>

<% include partials/footer.ejs %>